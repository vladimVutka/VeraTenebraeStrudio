<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backGround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/back_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/code_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/login_code"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="157dp" />

    <ImageView
        android:id="@+id/login_field_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/log_inimputback" />

    <EditText
        android:id="@+id/input_login"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/bg"
        android:ems="10"
        android:hint="Введите логин или почту"
        android:inputType="text"
        android:paddingStart="8dp"
        android:textColor="#000000"
        android:textColorHint="#89767676"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="47dp" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/bg"
        android:ems="10"
        android:hint="Введите пароль"
        android:inputType="text"
        android:paddingStart="8dp"
        android:textColor="#000000"
        android:textColorHint="#89767676"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="47dp" />

    <ImageView
        android:id="@+id/vera_tenebrae"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/veratenebrae_studio" />

    <ImageButton
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/reg_logbtn"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="217dp" />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="250dp"
        android:autoSizeMaxTextSize="120dp"
        android:autoSizeMinTextSize="14dp"
        android:autoSizeTextType="uniform"
        android:autoText="true"
        android:text="Войти"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>