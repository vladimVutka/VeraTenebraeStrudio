<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registartion_2_main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_ground2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:scaleX="-1"
        android:scaleY="1"
        android:src="@drawable/back_reg_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/reg_back_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/reg_back_field_2" />

    <ImageView
        android:id="@+id/vera_tenebrae"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/veratenebrae_studio" />

    <EditText
        android:id="@+id/input_firstname"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/bg"
        android:ems="10"
        android:hint="Введите имя"
        android:inputType="text"
        android:paddingStart="8dp"
        android:textColor="#000000"
        android:textColorHint="#89767676"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="47dp" />

    <EditText
        android:id="@+id/input_lastname"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/bg"
        android:ems="10"
        android:hint="Введите фамилию"
        android:inputType="text"
        android:paddingStart="8dp"
        android:textColor="#000000"
        android:textColorHint="#89767676"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="47dp" />

    <EditText
        android:id="@+id/input_middlename"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/bg"
        android:ems="10"
        android:hint="Введите отчество"
        android:inputType="text"
        android:paddingStart="8dp"
        android:textColor="#000000"
        android:textColorHint="#89767676"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="47dp" />

    <ImageView
        android:id="@+id/image_choose_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/image_choose_btn" />

    <ImageButton
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/reg_logbtn"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="217dp" />

    <TextView
        android:id="@+id/register_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="250dp"
        android:autoSizeMaxTextSize="120dp"
        android:autoSizeMinTextSize="14dp"
        android:autoSizeTextType="uniform"
        android:autoText="true"
        android:fontFamily="@font/jsmath_cmbx10"
        android:gravity="center"
        android:text="Войти"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>